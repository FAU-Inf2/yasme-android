<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.yasme.android">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="19"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <permission
        android:name=".gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name=".gcm.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <receiver
            android:name=".gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name=".gcm" />
            </intent-filter>
        </receiver>

        <service android:name=".gcm.GcmIntentService" />

        <activity
            android:name="net.yasme.android.ui.activities.ChatListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="net.yasme.android.ui.activities.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>

        <activity
            android:name="net.yasme.android.ui.activities.ContactActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.yasme.android.ui.activities.ChatListActivity" >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="net.yasme.android.ui.activities.ChatListActivity"/>
        </activity>

        <activity
            android:name="net.yasme.android.ui.activities.ChatActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.yasme.android.ui.activities.ChatListActivity" >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="net.yasme.android.ui.activities.ChatListActivity"/>
        </activity>

        <activity
            android:name="net.yasme.android.ui.activities.InviteToChatActivity"
            android:label="@string/title_activity_invite_to_chat"
            android:parentActivityName="net.yasme.android.ui.activities.ChatListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.yasme.android.ui.activities.ChatListActivity" />
        </activity>

        <activity
            android:name="net.yasme.android.ui.activities.ChatSettingsActivity"
            android:label="@string/title_chat_settings"
            android:parentActivityName="net.yasme.android.ui.activities.ChatActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="net.yasme.android.ui.activities.ChatActivity"/>
        </activity>
    </application>
</manifest>
